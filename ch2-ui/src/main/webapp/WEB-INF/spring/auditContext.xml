<?xml version="1.0" encoding="UTF-8"?>
<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
 xmlns:task="http://www.springframework.org/schema/task"
 xmlns:util="http://www.springframework.org/schema/util"
 xmlns:context="http://www.springframework.org/schema/context"
    xmlns:aop="http://www.springframework.org/schema/aop"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd
        http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task-3.0.xsd
       "
>

<!--     <aop:aspectj-autoproxy /> -->

    <bean
        id="auditManager"
        class="com.ttc.ch2.audit.AuditManager"
    >
        <property name="applicationCode" value="ch2" />
        <property name="appenders">
            <list>
            
                <bean class="com.ttc.ch2.audit.AsynchronousAppender">
                    <property name="transactionTemplate" ref="auditTransactionTemplate" />
                    <property name="dataSource" ref="auditDataSource" />
                    <property name="threadsCount" value="${datasource.audit.maxActive}" />
                </bean>
            </list>
        </property>
        <property name="resolver" >
            <bean class="com.ttc.ch2.ui.audit.ChResolver" >
                <property name="appNode" value="${app.node}"/>
            </bean>
            
        </property>
    </bean>
    
    <bean id="auditDataSource" class="org.apache.commons.dbcp2.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="${datasource.audit.driver}"/>
        <property name="url" value="${datasource.audit.url}"/>
        <property name="username" value="${datasource.audit.user}"/>
        <property name="password" value="${datasource.audit.password}"/>
        <property name="initialSize" value="${datasource.audit.initialSize}" />
        <!-- property name="maxActive" value="${datasource.audit.maxActive}" /-->
        <property name="maxTotal" value="${datasource.audit.maxActive}" />
        <property name="maxIdle" value="${datasource.audit.maxIdle}" />
        <property name="maxWaitMillis" value="${datasource.audit.maxWait}" />
        <property name="minIdle" value="${datasource.audit.minIdle}" />
        <property name="testOnBorrow" value="false" />
        <property name="testOnReturn" value="false" />
        <property name="testWhileIdle" value="true" />
        <property name="timeBetweenEvictionRunsMillis" value="300000" />
        <property name="validationQuery" value="select 1 from dual" />
        <property name="jmxName" value="Catalina:name=DataSource.audit" />
        <property name="removeAbandonedOnMaintenance" value="true" />
        <property name="removeAbandonedOnBorrow" value="true" />
     </bean>
    <bean
        id="auditTransactionTemplate"
        class="org.springframework.transaction.support.TransactionTemplate"
        p:transactionManager-ref="auditTransactionManager"
        p:isolationLevelName="ISOLATION_READ_COMMITTED"
        p:propagationBehaviorName="PROPAGATION_REQUIRED" 
    />
    <bean
        id="auditTransactionManager"
        class="org.springframework.jdbc.datasource.DataSourceTransactionManager"
        p:dataSource-ref="auditDataSource" 
    />
    
    <bean id="metricsDataSource" class="org.apache.commons.dbcp2.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="${datasource.audit.driver}"/>
        <property name="url" value="${datasource.audit.url}"/>
        <property name="username" value="${datasource.audit.user}"/>
        <property name="password" value="${datasource.audit.password}"/>
        <property name="initialSize" value="${datasource.audit.initialSize}" />
        <!--  property name="maxActive" value="4" /-->
        <property name="maxTotal" value="4" />
        <property name="maxIdle" value="${datasource.audit.maxIdle}" />
        <property name="maxWaitMillis" value="${datasource.audit.maxWait}" />
        <property name="minIdle" value="${datasource.audit.minIdle}" />
        <property name="testOnBorrow" value="false" />
        <property name="testOnReturn" value="false" />
        <property name="testWhileIdle" value="true" />
        <property name="timeBetweenEvictionRunsMillis" value="300000" />
        <property name="validationQuery" value="select 1 from dual" />
        <property name="jmxName" value="Catalina:name=DataSource.metrics" />
        <property name="removeAbandonedOnMaintenance" value="true" />
        <property name="removeAbandonedOnBorrow" value="true" />
     </bean>
    <bean
        id="metricsTransactionTemplate"
        class="org.springframework.transaction.support.TransactionTemplate"
        p:transactionManager-ref="metricsTransactionManager"
        p:isolationLevelName="ISOLATION_READ_COMMITTED"
        p:propagationBehaviorName="PROPAGATION_REQUIRED" 
    />
    <bean
        id="metricsTransactionManager"
        class="org.springframework.jdbc.datasource.DataSourceTransactionManager"
        p:dataSource-ref="metricsDataSource" 
    />
    
    <bean id="auditClientDataSource" class="org.apache.commons.dbcp2.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="${datasource.audit.driver}"/>
        <property name="url" value="${datasource.audit.url}"/>
        <property name="username" value="${datasource.audit.user}"/>
        <property name="password" value="${datasource.audit.password}"/>
        <property name="initialSize" value="${datasource.audit.initialSize}" />
        <!-- property name="maxActive" value="4" /-->
        <property name="maxTotal" value="4" />
        <property name="maxIdle" value="${datasource.audit.maxIdle}" />
        <property name="maxWaitMillis" value="${datasource.audit.maxWait}" />
        <property name="minIdle" value="${datasource.audit.minIdle}" />
        <property name="testOnBorrow" value="false" />
        <property name="testOnReturn" value="false" />
        <property name="testWhileIdle" value="true" />
        <property name="timeBetweenEvictionRunsMillis" value="300000" />
        <property name="validationQuery" value="select 1 from dual" />
        <property name="jmxName" value="Catalina:name=DataSource.auditClient" />
        <property name="removeAbandonedOnMaintenance" value="true" />
        <property name="removeAbandonedOnBorrow" value="true" />
     </bean>
    <bean
        id="auditClientTransactionTemplate"
        class="org.springframework.transaction.support.TransactionTemplate"
        p:transactionManager-ref="auditClientTransactionManager"
        p:isolationLevelName="ISOLATION_READ_COMMITTED"
        p:propagationBehaviorName="PROPAGATION_REQUIRED" 
    />
    <bean
        id="auditClientTransactionManager"
        class="org.springframework.jdbc.datasource.DataSourceTransactionManager"
        p:dataSource-ref="auditClientDataSource" 
    />
    
        
    <bean class="com.ttc.ch2.ui.audit.ChAuditManager" />
    
    
    <task:annotation-driven />
    
    <bean id="metricsManager" class="com.ttc.ch2.audit.MetricsManager" >
        <property name="appNode" value="${app.node}"/>
        <property name="appender" ref="metricsAppender" />
    </bean>
    
    <bean id="metricsAppender" class="com.ttc.ch2.audit.MetricsAppender">
        <property name="transactionTemplate" ref="metricsTransactionTemplate" />
        <property name="dataSource" ref="metricsDataSource" />
    </bean>
    
    <bean id="auditUiManager" class="com.ttc.ch2.ui.moduls.audit.common.AuditUiManager">
        <property name="transactionTemplate" ref="auditClientTransactionTemplate" />
        <property name="dataSource" ref="auditClientDataSource" />
    </bean>
    
</beans>