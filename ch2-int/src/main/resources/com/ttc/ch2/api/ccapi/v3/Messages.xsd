    <xs:complexType name="Message">
        <xs:sequence>
            <xs:element minOccurs="0" name="interpolatedMessage" type="xs:string" />
            <xs:element name="messageType" type="v3:MessageType" />
            <xs:element maxOccurs="unbounded" minOccurs="0" name="messageSubject" type="v3:MessageSubject" />
        </xs:sequence>
    </xs:complexType>


    <xs:complexType name="MessageType">
        <xs:sequence>
            <xs:element minOccurs="0" name="code" type="xs:string" />
            <xs:element minOccurs="0" name="description" type="xs:string" />
            <xs:element minOccurs="0" name="severity" type="v3:Severity" />
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="MessageSubject">
        <xs:sequence>
            <xs:element minOccurs="0" name="name" type="xs:string" />
            <xs:element minOccurs="0" name="value" type="xs:string" />
        </xs:sequence>
    </xs:complexType>
    
    <xs:simpleType name="Severity">
        <xs:restriction base="xs:string">
            <xs:enumeration value="INFO" />
            <xs:enumeration value="WARNING" />
            <xs:enumeration value="ERROR" />
        </xs:restriction>
    </xs:simpleType>

    <xs:complexType name="SoapResponse">
        <xs:sequence>
            <xs:element minOccurs="0" name="messageContext" type="v3:MessageContext" />
        </xs:sequence>
    </xs:complexType>
    
    <xs:complexType name="MessageContext">
        <xs:sequence>
            <xs:element maxOccurs="unbounded" minOccurs="0" name="message" type="v3:Message" />
            <xs:element minOccurs="0" name="status" type="v3:Status" />
        </xs:sequence>
    </xs:complexType>
    <xs:simpleType name="Status">
        <xs:restriction base="xs:string">
            <xs:enumeration value="SUCCESS" />
            <xs:enumeration value="FAILURE" />
        </xs:restriction>
    </xs:simpleType>

</xs:schema>